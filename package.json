{
  "name": "oak-web-application",
  "version": "0.0.0-development",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "NODE_ENV=production node scripts/build/write_env_file",
    "build": "next build",
    "postbuild": "next-sitemap",
    "cc": "commit",
    "cca": "git add . && commit",
    "check-types": "tsc --noEmit",
    "predev": "node scripts/build/write_env_file",
    "dev": "next dev",
    "export": "next export",
    "format": "prettier '**/*.{j,t}{s,sx}' --write",
    "format:check": "prettier '**/*.{j,t}{s,sx}' --check",
    "gql-codegen": "npm run gql-codegen:browser && npm run gql-codegen:node",
    "gql-codegen:browser": "graphql-codegen --config src/browser-lib/graphql/codegen.yml -r dotenv/config",
    "gql-codegen:node": "graphql-codegen --config src/node-lib/graphql/codegen.yml -r dotenv/config",
    "gql-codegen:sanity": "graphql-codegen --config src/node-lib/sanity-graphql/codegen.yml -r dotenv/config",
    "hasura:users": "hasura --project hasura-users --skip-update-check",
    "hasura:users:console": "npm run hasura:users console -- --no-browser",
    "hasura:users:migrations:apply": "npm run hasura:users migrate apply -- --all-databases",
    "hasura:users:metadata:apply": "npm run hasura:users metadata apply",
    "hasura:users:metadata:reload": "npm run hasura:users metadata reload",
    "hasura:users:start": "docker-compose -f 'hasura-users/docker-compose.yaml' up -d",
    "hasura:users:stop": "docker-compose -f 'hasura-users/docker-compose.yaml' stop",
    "hasura:curriculum": "hasura --project hasura-curriculum --skip-update-check",
    "hasura:curriculum:console": "npm run hasura:curriculum console -- --no-browser --console-port 4741 --api-port 4739",
    "hasura:curriculum:migrations:apply": "npm run hasura:curriculum migrate apply -- --all-databases",
    "hasura:curriculum:metadata:apply": "npm run hasura:curriculum metadata apply",
    "hasura:curriculum:metadata:reload": "npm run hasura:curriculum metadata reload",
    "hasura:curriculum:start": "docker-compose -f 'hasura-curriculum/docker-compose.yaml' up -d",
    "hasura:curriculum:stop": "docker-compose -f 'hasura-curriculum/docker-compose.yaml' stop",
    "lint": "NODE_ENV=test next lint",
    "lint:styles": "stylelint 'src/**/*.{ts,tsx}'",
    "pa11y": "pa11y-ci -c pa11yci.config.js",
    "playwright:install": "npx playwright install #install Playwright binaries on system",
    "playwright:test": "LOCAL_E2E=on npx playwright test",
    "playwright:test:ci": "npx playwright test --config=playwright.browserstack.config.ts",
    "playwright:test:bs_local": "LOCAL_E2E=on npx playwright test --config=playwright.browserstack.config.ts",
    "playwright:show": "npx playwright show-report",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "serve:test-config": "http-server -p 4444 oak-config",
    "start": "next start",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "storybook:static-serve": "build-storybook --quiet && http-server ./storybook-static --port=6006",
    "test": "jest --watch --collectCoverage=false",
    "test:ci": "jest",
    "test:storybook": "jest --config=jest.storybook.config.js",
    "test:storybook:ci": "start-server-and-test storybook:static-serve http://localhost:6006 test:storybook"
  },
  "overrides": {
    "puppeteer": "^17.1.2"
  },
  "dependencies": {
    "@bugsnag/js": "^7.18.0",
    "@bugsnag/plugin-react": "^7.18.0",
    "@hookform/resolvers": "^2.9.10",
    "@mux/mux-player-react": "^1.3.0",
    "@portabletext/react": "^1.0.6",
    "@react-aria/aria-modal-polyfill": "^3.6.0",
    "@sanity/image-url": "^1.0.1",
    "@slack/bolt": "^3.12.1",
    "@types/uuid": "^8.3.4",
    "change-case": "^4.1.2",
    "firebase": "^9.9.4",
    "firebase-admin": "^11.0.1",
    "gleap": "6.7.5",
    "js-cookie": "^3.0.1",
    "lodash": "^4.17.21",
    "next": "^13.0.1",
    "next-sanity-image": "^4.1.0",
    "next-seo": "^5.13.0",
    "node-fetch": "^2.6.7",
    "posthog-js": "^1.29.3",
    "react": "^18.2.0",
    "react-aria": "^3.20.0",
    "react-cookie": "^4.1.1",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.38.0",
    "react-stately": "^3.18.0",
    "react-transition-group": "^4.4.5",
    "styled-components": "^5.3.6",
    "uuid": "^8.3.2",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@apollo/client": "3.7.1",
